class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        charset = set()
        l = 0
        res = 0

        for r in range(len(s)): 
        # No need to iterate the l till the end when r reach to the last value of the array
            while s[r] in charset: #IMPORTANT: do not use if
                charset.remove(s[l])
                l += 1
            charset.add(s[r])
            res = max(res, (r - l + 1))
        return res
